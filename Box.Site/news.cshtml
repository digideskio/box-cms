@using Box.CMS.Web;
@{
    Page.Title = "News";
    Layout = "~/_PageLayout1C.cshtml";
    BoxLib.SetListPageSize("list", 8);
}

    
@BoxSite.ContentsAtUrl(navigationId: "list", itemTemplate:
@<div class="row" style="margin-bottom: 10px;">
    <a href="@BoxLib.GetContentLink(item)">
        <div class="col-md-2">
            <img src="@BoxLib.GetFileUrl(filePath: item.ThumbFilePath, asThumb: true)" alt="@item.Abstract"
                 style="width: 150px; max-height: 150px;" @Site.OnErrorImg() />
        </div>
        <div class="col-md-10">
            <h4>
                @item.Name
            </h4>
            <p>@item.Abstract</p>
        </div>
    </a>
</div>)

<ul class="pager">
    <li>@BoxSite.PageFirstButton("list")</li>
    <li>@BoxSite.PagePreviousButton("list")</li>
    <li>@BoxSite.PageNextButton("list")</li>
</ul>




