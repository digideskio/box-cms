@using Box.CMS.Web;
@{

    Layout = "~/_PageLayout1C.cshtml";
    string[] tags = new string[1];
    
    string query = UrlData[0];
    Page.Title = "Search results for '" + query + "'";
}

@BoxSite.ContentsRelated(new string[] { query }, itemTemplate:
    @<div class="row" style="margin-bottom: 10px;">
        <a href="@BoxLib.GetContentLink(item)">
            <div class="col-md-2">
                <img src="@BoxLib.GetFileUrl(filePath: item.ThumbFilePath, asThumb: true)" alt="@item.Abstract"
                     style="width: 150px; max-height: 150px;" @Site.OnErrorImg() />
            </div>
            <div class="col-md-10">
                <h4>
                    @item.Name
                </h4>
                <p>@item.Abstract</p>
            </div>
        </a>
    </div>)
