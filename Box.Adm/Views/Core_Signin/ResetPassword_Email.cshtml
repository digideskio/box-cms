<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="google" value="notranslate">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")

</head>
<body class="metro">

    <div class="navigation-bar">
        <div class="navigation-bar-content">
            <div class="element">@Resources.SharedStrings.Reset_password</div>
        </div>
    </div>

    <div class="grid mainGrid">
        <div class="row">
            <label>@Resources.SharedStrings.Your_new_password_is:</label>
            <b>@Model.NewPassword</b>
        </div>
        <div class="row">
            @Resources.SharedStrings.Reset_password_tooltip2
        </div>
        <div class="row">
            @Resources.SharedStrings.Please_go_to:
            <a href="@Model.SiteRoot/applyNewPassword/@Model.ChangeKey ">@Model.SiteRoot/applyNewPassword/@Model.ChangeKey</a>            
            <small>@Model.SystemName</small>
        </div>
    </div>
</body>
</html>
